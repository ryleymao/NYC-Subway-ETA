# Background Tasks
GTFS_RT_POLL_INTERVAL_SECONDS=45
MAX_FEED_AGE_SECONDS=120

# Transfer Settings
TRANSFER_PENALTY_MIN=180
TRANSFER_PENALTY_MAX=300

# API Settings
API_TIMEOUT_SECONDS=10.0
