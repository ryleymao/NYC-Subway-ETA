{
  "name": "nyc-subway-eta",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": { "label": "FastAPI", "onAutoForward": "openBrowser" }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "remoteEnv": {
    // Codespaces secrets (set these in repo → Settings → Codespaces → Secrets)
    "MTA_API_KEY": "${localEnv:MTA_API_KEY}",
    "MTA_GTFS_TRIP_UPDATES_URL": "${localEnv:MTA_GTFS_TRIP_UPDATES_URL}"
  }
}
